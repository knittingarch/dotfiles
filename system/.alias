# Shortcuts
alias ports="lsof -n +c 15 | grep LISTEN"
# Shell-agnostic reload
if [ -n "$ZSH_VERSION" ]; then
  alias reload="source ~/.zshrc"
else
  alias reload="source ~/.bashrc"
fi

# Git Specific Shortcuts
alias gb="git branch"
alias gc="git checkout"
alias gl="git log"
alias gs="git status"
alias force="git push --force-with-lease"
alias tree="git branch | grep '^\*' | sed 's/* //'"

